# pwi 2013- 6-11 creation
# pwi 2015- 7- 2 update to trychlos.pwi
# pwi 2017- 6-21 publish the release at last 

#_node="$(for _f in ${TTP_SHDIR}/*; do . "${_f}"; done; ttpf_main "$@" | awk '/^found:/ { print $2 }')"
_node="$(NOTTP=1 ksh $* | awk '/sucessfully/ { print $NF }')"

if [ ! -z "${_node}" ]; then
	. "${TTP_SHDIR}/bspSwitch"
	bspSwitch "${_node}"
	unset bspSwitch
fi

unset _node
