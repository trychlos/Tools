# Synopsis:
#
# (I): 1. service identifier
#      2. repository name
#
# (O): stdout: the HEAD revision number
#
# pwi 2013- 6- 8 creation
# pwi 2017- 6-21 publish the release at last 

function svnGetRepoPath
{
	typeset _service="${1}"
	[ -z "${_service}" ] && { msgerr "(svnGetHeadRevision) empty service arg."; return 1; } 

	typeset _repo="${2}"
	[ -z "${_repo}" ] && { msgerr "(svnGetHeadRevision) empty repository arg."; return 1; } 

	typeset -i _ret=0
	typeset _name
	typeset _path

	svn.sh list -service ${_service} -columns name,path -noheaders -format csv | \
		grep -ve '^\[' | \
		sed -e 's?;? ?g' | \
		while read _name _path; do
			#echo "name='${_name}'"
			#echo "path='${_path}'"
			if [ "${_name}" = "${_repo}" ]; then
				echo "${_path}"
				break
			fi
		done

	return ${_ret}
}
