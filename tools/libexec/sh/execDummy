# pwi 2017- 6-21 publish the release at last 

function execDummy
{
	typeset _cmd="$@"

	if [ "${opt_dummy}" = "yes" ]; then
		echo "[dummy] ${_cmd}" >&2
	else
		eval ${_cmd}
	fi
}
