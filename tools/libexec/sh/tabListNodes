function tabListNodes
{
	#set -x
	typeset _environ="${1:-"${ttp_node_environment}"}"
	typeset _dir
	typeset _conf
	typeset _env
	typeset _host
	bspRootEnum | while read _dir; do
		find "${_dir}/${ttp_nodesdir}" -type f -name '*.ini' 2>/dev/null | while read _conf; do
			_env="$(nodeGetEnvironment "${_conf}")"
			if [ "${_env}" = "${_environ}" ]; then
				nodeFromConf "${_conf}"
			fi
		done
	done | sort -u
}
