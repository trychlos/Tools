# Synopsis:
#
# (I): 1. the node to be set
#      2. whether we are run from 'switch' verb (switch)
#                         or from 'sh_switch' function (something_other)
#
# (O): -
#
# pwi 2013- 6-11 creation
# pwi 2015- 7- 2 update to trychlos.pwi
# pwi 2017- 6-21 publish the release at last 

function bspSwitch
{
	typeset _node="${1}"
	typeset _from="${2}"

	[ -z "${_node}" ] \
		&& { echo "[ttp.sh switch] target execution node is unset" >&2; return 1; }

	if [ "${_from}" = "switch" ]; then
		echo "success: ${_node}"

	elif [ "${_node}" = "${TTP_NODE}" ]; then
			echo "[ttp.sh switch] execution node was already set to ${_node}, unchanged"
	else
		export TTP_NODE="${_node}"
		echo "[ttp.sh switch] execution node successfully setup to ${_node}"
	fi

	[ -d "/${_node}" ] && cd "/${_node}"

	umask 0002

	return 0
}
