function bspSwitch
{
	typeset _node="${1}"

	[ -z "${_node}" ] && return 1

	export TTP_NODE="${_node}"
	# this string is scanned and interpreted from bootstrap/sw_switch 
	echo "[ttp.sh switch] execution node sucessfully setup to ${_node}"
	[ -d "/${_node}" ] && cd "/${_node}"

	return 0
}
