# (O): -
#
# pwi 2013- 2-18 creation
# pwi 2017- 6-21 publish the release at last 

function scriptEnumDirs
{
	#set -x
	typeset _script="${1}"
	typeset _bname=${_script##*/}
	typeset _verbdir="${_bname%.*}"

	typeset _dir
	bspRootEnum | while read _dir; do
		if [ -d "${_dir}/${_verbdir}" ]; then
			echo "${_dir}/${_verbdir}"
		fi
	done
}
