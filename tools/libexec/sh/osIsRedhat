#
# (O): version read from /etc/redhat-release is echoed on stdout
#
# (R): 0 (true) if this is a redhat-like system
#      1 else
#
# pwi 2021-12-29 creation

function osIsRedhat
{
set -x
	typeset -i _ret=0
	typeset _tag="/etc/redhat-release"

	if [ -s "${_tag}" ]; then
		cat "${_tag}"
	else
		let _ret=1
	fi

	return ${_ret}
}
