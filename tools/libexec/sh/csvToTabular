# Synopsis:
#
# (I). 1. (opt.) whether a headers line is displayed
#                yes|no
#                defaults to "yes"
#      2. (opt.) input csv separaror
#                defaults to ';'
#      3. (opt.) output tabular separaror
#                defaults to '|'
#
# (O). -
#
# pwi 2013- 7-25 creation
# pwi 2017- 6-21 publish the release at last

function csvToTabular
{
	typeset _headers="${1:-yes}"
	typeset _csvsep="${2:-${ttp_csvsep:-;}}"
	typeset _tabsep="${3:-${ttp_tabularsep:-|}}"

	perl -se '{
		sub display_line {
			$il = shift;
			print ${outsep};
			for( $j=0 ; $j<scalar( @{$lines[0]} ) ; ++$j ){
				printf( " %-*s %s", $column[$j], $lines[$il][$j], $outsep );
			}
			print "\n";
			if( $il == 0 && $headers eq "yes" ){
				print "+";
				for( $j=0 ; $j<scalar( @{$lines[0]} ) ; ++$j ){
					$len = 2+$column[$j];
					print "-" x $len;
					print "+";
				}
				print "\n";
			}
		}
		$nl = 0;
		@column = ();
		@lines = ();
		while( <STDIN> ){
			#print;
			chomp;
			$lines[$nl] = [split /${insep}/];
			$icol = 0;
			foreach $col ( @{$lines[$nl]} ){
				$len = length( $col );
				$column[$icol] = $len if !defined( $column[$icol] ) || $len > $column[$icol];
				$icol += 1;
			}
			$nl += 1;
		}
		for( $i=0 ; $i<$nl ; ++$i ){
			display_line( $i );
		}
	}' -- -headers="${_headers}" -insep="${_csvsep}" -outsep="${_tabsep}"
}
