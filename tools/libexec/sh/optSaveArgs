# Synopsis:
#
# (I): 1. array of command-line arguments
#
# (O): stdout: the string with quoted values
#
# pwi 2013- 6-11 creation
# pwi 2017- 6-21 publish the release at last 

function optSaveArgs
{
	#set -x
	typeset _endofopt="no"
	typeset -i _ia=1
	while [ ${_ia} -le $# ]; do
		typeset _arg="$(echo $(eval echo '${'${_ia}'}'))"

		if [ "${_endofopt}" = "yes" ]; then
			[ ${_ia} -eq 1 ] || printf " "
			printf "'%s'" "${_arg}"

		elif [ "${_arg}" = "--" ]; then
			_endofopt="yes"
			[ ${_ia} -eq 1 ] || printf " "
			printf "%s" "${_arg}"

		else
			# make options have two hyphens
			case ${_arg} in
				--*)
					;;
				-*)
					_arg="-${_arg}"
					;;
			esac
			if [ "${_arg:0:2}" = "--" ]; then
				[ ${_ia} -eq 1 ] || printf " "
				printf "%s" "${_arg}"
			else
				[ ${_ia} -eq 1 ] || printf " "
				printf "'%s'" "${_arg}"
			fi
		fi

		let _ia+=1
	done
	printf "\n"
}
