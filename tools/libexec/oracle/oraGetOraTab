# pwi 2013- 8- 2 creation
# pwi 2017- 6-21 publish the release at last 

function oraGetOraTab
{
	typeset _oratab="$(confGetKey "ttp_logical_keys" "${ttp_logical}" "0=oracle,1=oratab" 2)"
	[ -z "${_oratab}" ] && _oratab="/etc/oratab"
	echo "${_oratab}"
}
