# (I): 1: the meta-informations as provided by audioFileInfo() function
#
# (O): the 'Album' found in the meta-informations is displayed on stdout
#
# pwi 2021-11-29

function audioInfo2Album
{
	typeset _data="${1}"

	echo "${_data}" | grep -w ALBUM | awk '{ for( i=3; i<=NF; ++i ) printf( "%s%s", i>3?" ":"", $i )}' 2>/dev/null
}
